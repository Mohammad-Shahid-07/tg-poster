# Admin password for web UI (optional - leave blank for no auth)
ADMIN_PASSWORD=your_secret_password

# AI Configuration (Mistral)
MISTRAL_API_KEY=your_mistral_api_key

# Supabase (for persistent storage on Render)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
CHANNEL_ID=-100xxxxxxxxxx

# MTProto (for private channels - optional)
# Get these from https://my.telegram.org
API_ID=12345678
API_HASH=your_api_hash_here
# Session string (get from /auth page after login)
SESSION_STRING=

# Cron schedule (default: every 5 minutes)
CRON_SCHEDULE=*/5 * * * *

# Include source attribution in posts (true/false)
INCLUDE_SOURCE=true

# Data directories (use /tmp for Hugging Face)
DATA_DIR=/tmp/data
MEDIA_DIR=/tmp/media

# ================================
# QUIZ MODULE CONFIGURATION
# ================================

# AstraDB Configuration (required for quiz feature)
ASTRA_DB_ENDPOINT=https://your-db-id-region.apps.astra.datastax.com
ASTRA_DB_TOKEN=AstraCS:your_token_here
ASTRA_DB_NAMESPACE=default_keyspace

# Quiz Channel (optional - falls back to CHANNEL_ID if not set)
QUIZ_CHANNEL_ID=

# Quiz Settings
QUIZ_QUESTION_INTERVAL=3000   # Milliseconds between question pairs (default: 3000)
QUIZ_DEFAULT_COUNT=20         # Default questions per quiz

